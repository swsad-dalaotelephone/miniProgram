                      <!--pages/newtask/newtask.wxml-->
<view class='page'>
  <view class='head'>
    <i-icon type="return" bindtap='handleReturn' size="28" color="white"></i-icon>
    <text>{{newTaskText}}</text>
    <i-icon type="more" size="28" color="white"></i-icon>
  </view>

  <view class="page__bd page__bd_spacing">
    <i-panel i-class="newTaskPanel" hide-top="true">
      <i-row>
          <i-col span="8" i-class="col-class">        
            <view class="attrname">
              类别：
            </view>
          </i-col>
          <i-col span="16" i-class="col-class">
              <picker bindchange="bindPickerChange" value="{{index}}" range="{{array}}">
                <view class="picker">
                  {{array[index]}}
                </view>
              </picker>                
          </i-col>
      </i-row>


      <i-row>
          <i-col span="8" i-class="col-class">        
            <view class="attrname">
              名称：
            </view>
          </i-col>
          <i-col span="16" i-class="col-class" >
              <i-input value="{{ taskname }}" placeholder="请输入任务名" i-class="input"/> 
          </i-col>
      </i-row>
  
      <i-divider height="10"> </i-divider>

      <view class="question" wx:for="{{questionList}}">
          <i-row i-class="questionTitle">
              <i-col span="3" i-class="col-class">
                <view class="questionIndex">{{index + 1}}.</view>
              </i-col>

              <i-col span="18" i-class="col-class">
                <i-input value="{{ item.content }}" placeholder="请输入题目" i-class="input"/> 
              </i-col>

              <i-col span="3" i-class="col-class">
                <i-icon type="delete" bindtap='handleReturn' size="28" color="black"> </i-icon>          
              </i-col>
          </i-row>
          
          <view class="optionsPanel" wx:if="{{item.type == 'choice'}}">
            <view> choice</view>
            <view class="option" wx:for="{{item.options}}"> 
              <i-input value="{{ item.content }}" placeholder="请输入选项" i-class="input"/> 
            </view>
          </view>

          <view class="TextPanel" wx:if="{{item.type == 'text'}}">
            <view> text</view>
          </view>  

          <i-icon type="delete" bindtap='handleReturn' size="28" color="black" wx:if="{{index==QuestionList.length-1}}"></i-icon>


      </view>


    </i-panel>
  
    <view class="footer"> 
      <i-icon type="right" size="36" color="black"></i-icon>
    </view>
  </view>
</view>