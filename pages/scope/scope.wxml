                      <!--pages/scope/scope.wxml-->
<view class='page'>
  <view class='head'>
    <i-icon type="return" bindtap='handleReturn' size="28" color="white"></i-icon>
    <text>{{newTaskText}}</text>
    <i-icon type="more" size="28" color="white"></i-icon>
  </view>

  <view class="page__bd page__bd_spacing">
    <i-panel i-class="newTaskPanel" hide-top="true">
      <i-row>
          <i-col span="8" i-class="col-class">        
            <view class="attrname">
              性别：
            </view>
          </i-col>
          <i-col span="16" i-class="col-class">
              <view style="width: 50%;">
                <my-picker array="{{genders}}" index="{{gender_index}}">
                </my-picker>   
              </view>          
          </i-col>
      </i-row>
      <i-row>
          <i-col span="8" i-class="col-class">        
            <view class="attrname">
              年级：
            </view>
          </i-col>
          <i-col span="16" i-class="col-class">
              <view style="width: 50%;">
                <my-picker bindchange="gradeRestrictChange" array="{{grade_restricts}}" index="{{grade_restrict_index}}">
                </my-picker>   
              </view>                  
          </i-col>
      </i-row>

      <i-row>
          <view class="checkboxs" wx-if="{{grade_restrict_index == 1}}">
            <i-checkbox-group  current="{{current_grade}}"  bindchange="handleFruitChange">
                <view class="parent">
                <i-checkbox class="child" wx:for="{{grades}}" position="{{position}}" wx:key="{{item.id}}" value="{{item.name}}">
                </i-checkbox>
                </view>
            </i-checkbox-group>
          </view>
      </i-row>

      <i-row>
          <i-col span="8" i-class="col-class">        
            <view class="attrname">
              专业：
            </view>
          </i-col>
          <i-col span="16" i-class="col-class">
              <view style="width: 50%;">
                <my-picker bindchange="majorRestrictChange" array="{{major_restricts}}" index="{{major_restrict_index}}">
                </my-picker>   
              </view>                  
          </i-col>
      </i-row>

      <i-row>
          <view class="checkboxs" wx-if="{{major_restrict_index == 1}}">
            <i-checkbox-group  current="{{current_major}}"  bindchange="handleFruitChange">
                <view class="parent">
                <i-checkbox class="child" wx:for="{{majors}}" position="{{position}}" wx:key="{{item.id}}" value="{{item.name}}">
                </i-checkbox>
                </view>
            </i-checkbox-group>
          </view>
      </i-row>


    </i-panel>
  
    <view class="footer"> 
      <i-icon type="right" size="36" color="black"></i-icon>
    </view>
  </view>
</view>