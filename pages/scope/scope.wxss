/* pages/scope/scope.wxss */

page{
  min-height: 100%;
  display: flex;
  flex-direction: column;
}

.page {
  flex-grow: 1; /* Grow to fill available space */
  display: flex;
  flex-direction: column;
}

.pagebd {
  padding-bottom: 0px;
  flex-grow: 1;
  display: flex;
  flex-direction: column;
}


.newTaskPanel {
  position: relative;
  top: -15px;
  border-radius: 5px;
  background-color: white;
  height: auto;
  flex-grow: 1;
  display: flex;
  flex-direction: column;
}

.main-content {
  flex: 1 0 auto;
}

.bottom {
  flex: 0 0 auto;
  display: flex;
  justify-content: center;
  /* border: 1px solid red; */
  flex-flow: row;
  align-content: flex-start;
}

.checkboxs {
  width: 80%;
  float: right;
  padding-right: 15px;
}

.picker-row {
  margin: 10px 5px;
}

.parent {
  width: 100%;
  /* height: 150px; */
  display: flex;
  flex-flow: row wrap;
  align-content: flex-start;
}

.child {
  box-sizing: border-box;
  background-color: white;
  flex: 0 0 50%;
  height: 50px; 
  /* border: 1px solid red; */
  display: flex;
}


.page1 {
  display: flex;
  flex-direction: column
}


.icon {
  height: 28px;
  width: 28px;
}

.picker {
  width: 80%;
}

textarea {
  height: 150rpx;
}



