/* pages/fulfiltask/fulfiltask.wxss */
page{
  min-height: 100%;
  display: flex;
  flex-direction: column;
}

.page{
  flex-grow: 1; /* Grow to fill available space */
  display: flex;
  flex-direction: column;
}

.pagebd {
  padding-bottom: 0px;
  flex-grow: 1;
  display: flex;
  flex-direction: column;
}


.newTaskPanel {
  position: relative;
  top: -15px;
  border-radius: 5px;
  background-color: white;
  height: auto;
  flex-grow: 1;
  display: flex;
  flex-direction: column;
  padding: 10px 10px;
}

.attr-row {
  margin: 10px 5px;
}

.main-content {
  flex: 1 0 auto;
}



.page1 {
  display: flex;
  flex-direction: column
}

.head {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;     /* 垂直居中 */
  height: 90px;
  color: white;
  background-color: #77a9fd
}

.questionTitle {
  color: rgb(119, 169, 253);
}

.parent {
  width: 100%;
  /* height: 150px; */
  display: flex;
  flex-flow: row wrap;
  align-content: flex-start;
}

.child {
  box-sizing: border-box;
  background-color: white;
  flex: 0 0 50%;
  height: 40px; 
  /* font-size:100rpx !important; */
  /* border: 1px solid red; */
  display: flex;
}