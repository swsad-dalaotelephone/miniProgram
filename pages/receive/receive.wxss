.head {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;     /* 垂直居中 */
  height: 100px;
  color: white;
  background-color: #77a9fd
}

.top {
  position: relative;
  top: -25px;
  background-color: white;
  border-radius: 5px;
}

.bottom {
  display: flex;
  justify-content: center
}

.bottom button {
  border-radius: 5px;
  margin: 20px;
  color: white;
  background-color: #77a9fd;
  box-shadow: 0px 0px 10px 0px rgba(190, 211, 254, 1);
  border: 1px solid rgba(255, 255, 255, 0);
}

