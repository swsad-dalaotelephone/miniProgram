<!--pages/auditlist/auditlist.wxml-->
<view class="titleBox">
    <view>{{taskName}}</view>
</view>

<view class="selectTab">
    <view class="tab {{selectedTab==0?'selected':'unselected'}}" bindtap="switchTab">任务详情</view>
    <view class="tab {{selectedTab==0?'unselected':'selected'}}" bindtap="switchTab">审核列表</view>
</view>

<view class="Box detailBox {{selectedTab==0?'visible':'invisible'}}">

    <!-- wx:for 遍历数组来存放各项信息 -->
    <view class="innerMsgBox">
        <view class="msgTitle">问卷描述</view>
        <view class="msg">blablabla</view>
    </view>

    <view class="buttonLine">
        <button class="btnEnd">中止任务</button>
        <button class="btnViewStat">查看统计</button>
    </view>

</view>

<view class="auditList {{selectedTab==0?'invisible':'visible'}}">

    <view class="Box auditItem" wx:for="{{auditList}}" wx:key="{{item.id}}">
        <radio class="selectRadio"> </radio>
        <image> </image>
        <view class="text"> <text style="color:#77a9fd">{{item.submitter}}</text> 的提交</view>
        <view class="status {{item.status==0?'unauditted':'auditted'}}">{{item.status==0?'未审核':'已审核'}}</view>
    </view>
    
    <button>全选</button>
    <button>全不选</button>
    <button>批量审核</button>
</view>

