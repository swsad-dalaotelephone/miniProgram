<!--pages/newrecruit/newrecruit.wxml-->

  <view class='page'>
    <view class='head'>
      <i-icon type="return" bindtap='handleReturn' size="28" color="white"></i-icon>
      <text>{{task_type}}</text>
      <i-icon type="more" size="28" color="white"></i-icon>
    </view>

    <view class="page__bd page__bd_spacing pagebd" >
        <view class="newTaskPanel">  
            <view class="main-content">
              <i-row i-class="attr-row">
                  <i-col span="8" i-class="col-class">        
                    <view class="attrname">
                      描述：
                    </view>
                  </i-col>
                  <i-col span="16" i-class="col-class">
                    <view class="textarea-input">
                      <textarea placeholder="活动描述" value="{{description}}" bindinput="bindDescriptionInput"/>
                    </view>                
                  </i-col>
              </i-row>

              <i-row i-class="attr-row">
                  <i-col span="8" i-class="col-class">        
                    <view class="attrname">
                      活动时间：
                    </view>
                  </i-col>
                  <i-col span="16" i-class="col-class">
                    <view class="time-range">
                      <view class="indicate">从</view>
                      <picker mode="date" value="{{start_date}}" start="2010-05-01" end="2030-09-01" bindchange="bindStartDateChange">
                        <view class="date-picker">
                          {{start_date}}
                        </view>
                      </picker>
                      <view class="indicate">至</view>
                      
                      <picker mode="date" value="{{end_date}}" start="2010-05-01" end="2030-09-01" bindchange="bindEndDateChange">
                        <view class="date-picker">
                           {{end_date}}
                        </view>
                      </picker>                                        
                    </view>                
                  </i-col>
              </i-row>
              <i-row i-class="attr-row">
                  <i-col span="8" i-class="col-class">        
                    <view class="attrname">
                      活动地点：
                    </view>
                  </i-col>
                  <i-col span="16" i-class="col-class">
                    <view class="single-line-input">
                      <input placeholder="地点" value="{{location}}" bindinput="bindLocationInput"/>
                    </view>                
                  </i-col>
              </i-row>

            </view>

            <view class='bottom'>
              <button>下一步</button>
            </view>
        </view>
    </view>
  </view>


