<!--index.wxml-->
<view class='page'>
  <view class='head'>
    <i-icon type="return" size="28" color="#77a9fd"></i-icon>
    <text>Home</text>
    <i-icon type="add" size="28" color="white" bindtap='handleAddButton'></i-icon>
  </view>
  <view class="top page__bd_spacing">

    <swiper indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" circular="{{circular}}" vertical="{{vertical}}" interval="{{interval}}" duration="{{duration}}" previous-margin="{{previousMargin}}px" next-margin="{{nextMargin}}px">
      <block wx:for="{{background}}" wx:key="*this">
        <swiper-item>
          <image class='imgw' src="{{item}}" mode="aspectFit" />
        </swiper-item>
      </block>
    </swiper>
</view>

    <van-tabs swipeable animated sticky duration="0.5" custom-nav-class="tab">
      <van-tab title="全部">
        <view class="taskList" wx:for="{{taskList}}" wx:key="{{item}}">
          <my-card title="{{item.title}}" extra="￥{{item.price}}" thumb="https://i.loli.net/2017/08/21/599a521472424.jpg " i-class="card-demo " status="{{item.status}}">
            <view slot="content">{{item.time}}</view>
            <view slot="footer">{{item.location}}</view>
          </my-card>
        </view>
      </van-tab>
      <van-tab title="问卷">
        <view class="taskList" wx:for="{{taskList}}" wx:key="{{item}}">
          <my-card title="{{item.title}}" extra="￥{{item.price}}" thumb="https://i.loli.net/2017/08/21/599a521472424.jpg " i-class="card-demo " status="{{item.status}}">
            <view slot="content">{{item.time}}</view>
            <view slot="footer">{{item.location}}</view>
          </my-card>
        </view>
      </van-tab>
      <van-tab title="信息收集">
        <view class="taskList" wx:for="{{taskList}}" wx:key="{{item}}">
          <my-card title="{{item.title}}" extra="￥{{item.price}}" thumb="https://i.loli.net/2017/08/21/599a521472424.jpg " i-class="card-demo" status="{{item.status}}">
            <view slot="content">{{item.time}}</view>
            <view slot="footer">{{item.location}}</view>
          </my-card>
        </view>
      </van-tab>
      <van-tab title="招募">
        <view class="taskList" wx:for="{{taskList}}" wx:key="{{item}}">
          <my-card title="{{item.title}}" extra="￥{{item.price}}" thumb="https://i.loli.net/2017/08/21/599a521472424.jpg " i-class="card-demo " status="{{item.status}}">
            <view slot="content">{{item.time}}</view>
            <view slot="footer">{{item.location}}</view>
          </my-card>
        </view>
      </van-tab>
    </van-tabs>

  
</view>