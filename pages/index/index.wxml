<!--index.wxml-->
<view class='page'>
  <view class='head'>
    <i-icon type="return" size="28" color="#77a9fd"></i-icon>
    <text>Home</text>
    <i-icon type="add" size="28" color="white" bindtap='handleAddButton'></i-icon>
  </view>
  <view class="top page__bd_spacing">

    <swiper indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" circular="{{circular}}" vertical="{{vertical}}" interval="{{interval}}" duration="{{duration}}" previous-margin="{{previousMargin}}px" next-margin="{{nextMargin}}px">
      <block wx:for="{{background}}" wx:key="*this">
        <swiper-item>
          <image class='imgw' src="{{item}}" mode="aspectFit" />
        </swiper-item>
      </block>
    </swiper>

    <van-tabs swipeable animated sticky duration="0.5" custom-nav-class="tab" color="#77a9fd">
      <van-tab title="全部">
        <view class="taskList" wx:for="{{taskList}}" wx:key="{{item}}">
          <my-card bindtap="openReceive" data-item="{{item}}" item="{{item}}" thumb="https://i.loli.net/2017/08/21/599a521472424.jpg " show="{{false}}"></my-card>
        </view>
      </van-tab>
      <van-tab title="问卷">
        <view class="taskList" wx:for="{{taskList}}" wx:key="{{item}}">
          <my-card item="{{item}}" thumb="https://i.loli.net/2017/08/21/599a521472424.jpg "></my-card>
        </view>
      </van-tab>
      <van-tab title="信息收集">
        <view class="taskList" wx:for="{{taskList}}" wx:key="{{item}}">
          <my-card item="{{item}}" thumb="https://i.loli.net/2017/08/21/599a521472424.jpg "></my-card>
        </view>
      </van-tab>
      <van-tab title="招募">
        <view class="taskList" wx:for="{{taskList}}" wx:key="{{item}}">
          <my-card item="{{item}}" thumb="https://i.loli.net/2017/08/21/599a521472424.jpg "></my-card>
        </view>
      </van-tab>
    </van-tabs>

  </view>
</view>