/* pages/audit/audit.wxss */

.feedbackInput {
    width: 620rpx;
    height: 200rpx;
    margin: auto;
    margin-top: 50rpx;
    border: solid 1px #BBBBBB;
    border-radius: 20rpx;
    text-align: start;
}

.buttonLine{
    position: relative;
    margin-top: 40rpx;
}

.buttonLine button{
    display: inline-block;
    width: 300rpx;
    height: 90rpx;
    margin-left: 30rpx;

    /* 文字 */
    color: white;
    font-size: 36rpx;
    text-align: center;
    font-family: Arial;

    /* 边框 */
    border-radius: 4px;
    box-shadow: 0px 0px 10px 0px rgba(190, 211, 254, 1);
    border: 1px solid rgba(255, 255, 255, 0);
}

.buttonLine .no{
    background-color: #BED3FE;
}

.buttonLine .yes{
    background-color: #77A9FD;
}

.hidden{
    display:none;
}