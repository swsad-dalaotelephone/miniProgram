/* pages/audit/audit.wxss */

.feedbackInput {
    width: 620rpx;
    height: 200rpx;
    margin: auto;
    margin-top: 30rpx;
    border: solid 1px #BBBBBB;
    border-radius: 20rpx;
    text-align: start;
}

.buttonLine{
    position: relative;
    margin-top: 40rpx;
}

.buttonLine button{
    display: inline-block;
    width: 300rpx;
    height: 90rpx;
    margin-left: 30rpx;

    /* 文字 */
    color: white;
    font-size: 36rpx;
    text-align: center;
    font-family: Arial;

    /* 边框 */
    border-radius: 4px;
    box-shadow: 0px 0px 10px 0px rgba(190, 211, 254, 1);
    border: 1px solid rgba(255, 255, 255, 0);
}

.buttonLine .no{
    background-color: #BED3FE;
}

.buttonLine .yes{
    background-color: #77A9FD;
}

.hidden{
    display:none;
}

.questionTitle {
  color: rgb(119, 169, 253);
}

.parent {
  width: 100%;
  /* height: 150px; */
  display: flex;
  flex-flow: row wrap;
  align-content: flex-start;
}

.child {
  box-sizing: border-box;
  background-color: white;
  flex: 0 0 50%;
  height: 30px; 
  /* border: 1px solid red; */
  display: flex;
}
.textPanel {
  width: 620rpx;
  margin: 20rpx 30rpx;
  border: solid 1px #BBBBBB;
  border-radius: 20rpx;
  text-align: start;
  padding: 5rpx;
  color: rgb(88, 96, 105);
}